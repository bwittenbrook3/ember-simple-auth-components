<div class="row" id="login_container" >
	<div class="col-md-4 col-md-offset-4">
		<div class="well white_well" >
			<div class="sign_in_title text-center">
				<h3 class="forgot_password_title">Forgot your password?</h3>
				<p>Enter your email address below and we'll send you password reset instructions.</p>
			</div>
			{{#if errorMessage}}
			<div class="col-md-12 text-center login_error_message">
				<h4><i class="fa fa-exclamation-triangle"> {{errorMessage}}</i></h4>
			</div>
			{{/if}}
			<form {{action 'resetPassword' on='submit'}}>
				<div class="form-group">
					<label for="identification">Email</label>
					<div class="controls">
						<!-- {{ui/textfield-auto-focus class="form-control" id="identification" value=email placeholder="Enter your email address"}} -->
						{{input class="form-control" id="identification" value=email placeholder="Enter your email address"}}
					</div>
				</div>
				<div class="sign_in_container">
					<button class="btn btn-success">Reset my password</button>
				</div>
			</form>
		</div>
	</div>
</div>
<div class="sign-in-bottom-link">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<p class="text-center">
			<small>
				<strong>Never mind:</strong> {{#link-to "login"}}Take me back to the login page{{/link-to}}
			</small>
			</p>
		</div>
	</div>
</div>
